{% extends "govuk/template.njk" %}

{% from "govuk/components/header/macro.njk" import govukHeader %}
{% from "govuk/components/service-navigation/macro.njk" import govukServiceNavigation %}

{% set govukRebrand = true %}

{% block head %}
  <% htmlWebpackPlugin.files.css.forEach(file => { %> <link href="<%= file.replace('../dist/', '/static/') %>" rel="stylesheet"><% }) %>
{% endblock %}

{% block header %}
    {{ govukHeader({
    classes: "govuk-header--full-width-border",
    homepageUrl: "/", 
    productName: serviceName, 
    serviceUrl: "/"
  }) }}
  
  {% if auth.isAuthenticated %}
    {{ govukServiceNavigation({
      navigation: [
        {
          href: "/logout",
          text: "Sign Out"
        }
      ]
    }) }}
  {% endif %}
{% endblock %}


{% block pageTitle %}
  {{ pageTitle }}
{% endblock %}

{% block footer %}
  {{ govukFooter({ rebrand: true }) }}
{% endblock %}

{% block bodyEnd %}
<% htmlWebpackPlugin.files.js.forEach(file => { %>  <script src="<%= file.replace('../dist/', '/static/') %>"></script><% }) %>
{% endblock %}
