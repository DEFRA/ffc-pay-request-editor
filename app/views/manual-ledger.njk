{% extends '_layout.njk' %}
{% from "govuk/components/back-link/macro.njk" import govukBackLink %}
{% from "macros/search-box.njk" import searchBox %}

{% block beforeContent %}
  {{ govukBackLink({
        text: "Back",
        href: "/",
        attributes: {
          id: "back"
        }
      }) 
    }}
{% endblock %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-full">
      <h1 class="govuk-heading-l">Manual Ledger Assignment</h1>
      <div class="govuk-!-padding-bottom-3">
        <div class="user-search-box govuk-!-width-one-third">
          <form class="search-form" action="/manual-ledger" method="POST">
            <input type="hidden" name="crumb" value="{{crumb}}"/>
            {{searchBox(model)}}
          </form>
        </div>

        <p class="govuk-body">
          <a href="/manual-ledger" class="govuk-link govuk-link--no-visited-state">View all existing manual ledger assignment datasets</a>
        </p>
        <table class="govuk-table">
          <caption class="govuk-table__caption govuk-table__caption--s">Manual Ledger Assignments</caption>
          <thead class="govuk-table__head">
            <tr class="govuk-table__row">
              <th scope="col" class="govuk-table__header govuk-body-s">Scheme<th>
              <th scope="col" class="govuk-table__header govuk-body-s">FRN<th>
              <th scope="col" class="govuk-table__header govuk-body-s">Application ID<th>
              <th scope="col" class="govuk-table__header govuk-body-s">Invoice<th>
              <th scope="col" class="govuk-table__header govuk-table__header--numeric govuk-body-s">Request<th>
              <th scope="col" class="govuk-table__header govuk-table__header--numeric govuk-body-s">Total amount<th>
              <th scope="col" class="govuk-table__header govuk-body-s">Checked by<th>
              <th scope="col" class="govuk-table__header govuk-body-s">Date<th>
              <th scope="col" class="govuk-table__header"><th>
            </tr>
          </thead>
          <tbody class="govuk-table__body">
            {% for data in ledgerData %}
              <tr class="govuk-table__row">
                <th scope="col" class="govuk-table__cell govuk-body-s">{{ data.paymentRequest.scheme.name }}<th>
                <th scope="col" class="govuk-table__cell govuk-body-s">{{ data.paymentRequest.frn }}<th>
                <th scope="col" class="govuk-table__cell govuk-body-s">{{ data.paymentRequest.agreementNumber }}<th>
                <th scope="col" class="govuk-table__cell govuk-body-s">{{ data.paymentRequest.invoiceNumber }}<th>
                <th scope="col" class="govuk-table__cell govuk-table__cell--numeric govuk-body-s">{{ data.paymentRequest.paymentRequestNumber }}<th>
                <th scope="col" class="govuk-table__cell govuk-table__cell--numeric govuk-body-s">Â£{{ data.paymentRequest.value }}<th>
                <th scope="col" class="govuk-table__cell govuk-body-s">{{ data.checkedBy }}<th>
                <th scope="col" class="govuk-table__cell govuk-body-s">{{ data.checkedDate }}<th>
                <th scope="col" class="govuk-table__cell govuk-body-s">
                  {% if not data.checked %}
                    <a href="/manual-ledger-check?paymentrequestid={{data.paymentRequest.paymentRequestId}}">Check</a>
                  {% endif %}    
                <th>
              </tr>
            {% endfor %}
          </tbody>
        </table>
      <div>
    </div>
  </div>
{% endblock %}
