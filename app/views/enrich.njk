{% extends '_layout.njk' %}
{% from "govuk/components/back-link/macro.njk" import govukBackLink %}
{% from "macros/search-box.njk" import searchBox %}

{% block beforeContent %}
  {{ govukBackLink({
        text: "Back",
        href: "/",
        attributes: {
          id: "back"
        }
      }) 
    }}
{% endblock %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-full">
      <h1 class="govuk-heading-l">Requests awaiting reporting data</h1>

      {% if enrichData.length%}
        <div class="govuk-!-padding-bottom-3">
          <div class="user-search-box govuk-!-width-one-third">
            <form class="search-form" action="/enrich" method="POST">
              <input type="hidden" name="crumb" value="{{crumb}}"/>
              {{searchBox(model)}}
            </form>
          </div>

          <p class="govuk-body">
            <a href="/enrich" class="govuk-link govuk-link--no-visited-state">View all requests</a>
          </p>

          <table class="govuk-table">
            <caption class="govuk-table__caption govuk-table__caption--s">Requests</caption>
            <thead class="govuk-table__head">
              <tr class="govuk-table__row">
                <th scope="col" class="govuk-table__header govuk-body-s">Scheme</th>
                <th scope="col" class="govuk-table__header govuk-body-s">FRN</th>
                <th scope="col" class="govuk-table__header govuk-body-s">Application ID</th>
                <th scope="col" class="govuk-table__header govuk-body-s">Invoice</th>
                <th scope="col" class="govuk-table__header govuk-table__header--numeric govuk-body-s">Request</th>
                <th scope="col" class="govuk-table__header govuk-table__header--numeric govuk-body-s">Total amount</th>
                <th scope="col" class="govuk-table__header govuk-table__header--numeric govuk-body-s">Arrived</th>
                <th scope="col" class="govuk-table__header"></th>
              </tr>
            </thead>
            <tbody class="govuk-table__body">
              {% for data in enrichData %}
                <tr class="govuk-table__row">
                  <td scope="col" class="govuk-table__cell govuk-body-s">{{ data.schemes.name }}</td>
                  <td scope="col" class="govuk-table__cell govuk-body-s">{{ data.frn }}</td>
                  <td scope="col" class="govuk-table__cell govuk-body-s">{{ data.agreementNumber }}</td>
                  <td scope="col" class="govuk-table__cell govuk-body-s">{{ data.invoiceNumber }}</td>
                  <td scope="col" class="govuk-table__cell govuk-table__cell--numeric govuk-body-s">{{ data.paymentRequestNumber }}</td>
                  <td scope="col" class="govuk-table__cell govuk-table__cell--numeric govuk-body-s">{{ data.valueDecimal }}</td>
                  <td scope="col" class="govuk-table__cell govuk-table__cell--numeric govuk-body-s">{{ data.receivedFormatted }}</td>
                  <td scope="col" class="govuk-table__cell govuk-body-s">
                      <a href="enrich-request?invoiceNumber={{ data.invoiceNumber }}">Enrich</a>
                  </td>
                </tr>
              {% endfor %}
            </tbody>
          </table>
        <div>
      {% else %}
        <div class="govuk-inset-text">
          No payment requests awaiting reporting data
        </div>
      {% endif %}
    </div>
  </div>
{% endblock %}
