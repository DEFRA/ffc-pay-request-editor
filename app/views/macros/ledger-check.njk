{% macro ledgerCheck(ledgerType, ledgerValue) %}
  <div class="govuk-grid-column-one-half">
    <h1 class="govuk-heading-s">{{ledgerType | capitalize}}:</h1>
    <div id="{{ledgerType}}-value-wrapper" class="govuk-form-group">
      <label class="govuk-label" for="{{ledgerType}}-value">
        Value
      </label>
      <div class="govuk-input__wrapper">
        <div class="govuk-input__prefix" aria-hidden="true">Â£</div>
        <input class="govuk-input govuk-input--width-5" id="{{ledgerType}}-value" name="{{ledgerType}}-value" value="{{ledgerValue}}" type="text">
      </div>
    </div>
    <div class="govuk-form-group">
      <label class="govuk-label" for="{{ledgerType}}-percentage">
        Percentage
      </label>
      <div class="govuk-input__wrapper">
        <input class="govuk-input govuk-input--width-5" id="{{ledgerType}}-percentage" name="{{ledgerType}}-percentage" type="text">
        <div class="govuk-input__suffix" aria-hidden="true">%</div>
      </div>
    </div>
  </div>
{% endmacro %}
