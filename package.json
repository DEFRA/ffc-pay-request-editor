    "applicationinsights": "^1.8.10",
    "ffc-messaging": "^2.4.1",
    "ffc-pay-event-publisher": "^1.0.1",
    "govuk-frontend": "^3.14.0",
    "hapi-pino": "^8.3.0",
    "joi": "^17.4.0",
    "log-timestamp": "^0.3.0",
    "nunjucks": "^3.2.3",
    "pg": "^8.6.0",
    "pg-hstore": "^2.3.3",
    "sequelize": "^6.16.1",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@hapi/catbox-memory": "^5.0.1",
    "blipp": "^4.0.2",
